<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_contact_view" >

    <LinearLayout
        android:id="@+id/sort_key_layout"
        android:layout_width="fill_parent"
        android:layout_height="18dip"
        android:background="#EAEAEA" >

        <com.ciao.app.views.customviews.CustomTextView
            android:id="@+id/sort_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:text="hi"
            android:textColor="#000000"
            android:textSize="13sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_page"
        android:paddingBottom="@dimen/padding_page" >

        <com.ciao.app.views.customviews.circularimageview.CircularImageView
            android:id="@+id/civ_person_image"
            android:layout_width="@dimen/dimen_contact_image"
            android:layout_height="@dimen/dimen_contact_image"
            android:layout_alignParentLeft="true"
            android:clickable="false"
            android:src="@drawable/user_avtar"
            app:civ_border="true"
            app:civ_border_color="@android:color/darker_gray"
            app:civ_border_width="2dp" >
        </com.ciao.app.views.customviews.circularimageview.CircularImageView>

        <com.ciao.app.views.customviews.CustomTextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/civ_person_image"
            android:text="Hello"
            android:textSize="22sp" 
            android:textColor="@color/color_txt_gray"/>

    </RelativeLayout>

</LinearLayout>