<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dropdown_item_height"
    android:background="@android:color/white">
    <com.ciao.app.views.customviews.circularimageview.CircularImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/dropdown_item_height"
        android:layout_height="@dimen/dropdown_item_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/user_avtar" />
    <com.ciao.app.views.customviews.CustomTextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@android:id/icon"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@android:id/icon"
        android:layout_toRightOf="@android:id/icon"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:padding="@dimen/dropdown_item_padding"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/iv_remove_contact"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_select_contact"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>