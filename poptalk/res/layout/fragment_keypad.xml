<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_app_header">

        <ImageView
            android:id="@+id/iv_clear_digit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/contact_list_btm"
            android:clickable="true" />

        <LinearLayout
            android:id="@+id/ll_country"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:clickable="true">
            <com.ciao.app.views.customviews.CustomTextView
                android:id="@+id/tv_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"/>
           <com.ciao.app.views.customviews.CustomTextView
                android:id="@+id/tv_country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="United States"
                android:textSize="10dp"/>
         </LinearLayout>
         
         <EditText
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/linearLayout"
            android:layout_toLeftOf="@+id/iv_clear_digit"
            android:layout_toRightOf="@+id/ll_country"
            android:layout_toStartOf="@+id/iv_clear_digit"
            android:textSize="@dimen/ts_keypad"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:background="@null" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_splash_login_sign_up_vertical_line"
        android:background="@color/color_vertical_line_dark_bottom_menu"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_call_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_call_button">

            <ImageView
                android:id="@+id/iv_make_call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/call_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/ll_call_button"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/key_1"
                    style="@style/KeybaordStyle"
                    android:text="1" />

                <Button
                    android:id="@+id/key_2"
                    style="@style/KeybaordStyle"
                    android:text="2" />

                <Button
                    android:id="@+id/key_3"
                    style="@style/KeybaordStyle"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/key_4"
                        style="@style/KeybaordStyle"
                        android:text="4" />

                    <Button
                        android:id="@+id/key_5"
                        style="@style/KeybaordStyle"
                        android:text="5" />

                    <Button
                        android:id="@+id/key_6"
                        style="@style/KeybaordStyle"
                        android:text="6" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/key_7"
                        style="@style/KeybaordStyle"
                        android:text="7" />

                    <Button
                        android:id="@+id/key_8"
                        style="@style/KeybaordStyle"
                        android:text="8" />

                    <Button
                        android:id="@+id/key_9"
                        style="@style/KeybaordStyle"
                        android:text="9" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/key_astric"
                        style="@style/KeybaordStyle"
                        android:text="*" />

                    <Button
                        android:id="@+id/key_0"
                        style="@style/KeybaordStyle"
                        android:text="0" />

                    <Button
                        android:id="@+id/key_hash"
                        style="@style/KeybaordStyle"
                        android:text="#" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>