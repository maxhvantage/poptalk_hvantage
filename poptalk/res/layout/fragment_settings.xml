<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_page"
    android:paddingRight="@dimen/padding_page"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <com.ciao.app.views.customviews.circularimageview.CircularImageView
                    android:id="@+id/civ_contact_image"
                    android:layout_width="@dimen/dimen_profile_pic"
                    android:layout_height="@dimen/dimen_profile_pic"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_avtar"
                    app:civ_border="true"
                    app:civ_border_color="@color/color_app_header"
                    app:civ_border_width="5dp" >
                </com.ciao.app.views.customviews.circularimageview.CircularImageView>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_my_ciao_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_page_txt"
                android:paddingTop="@dimen/padding_page_txt" >

                <com.ciao.app.views.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_my_ciao_number"
                    android:textColor="@color/color_txt_gray"
                    android:textSize="@dimen/ts_page_text"
                    android:id="@+id/tv_my_ciao_lable" />

                <Spinner
                    android:id="@+id/spnr_my_ciao_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_txt_gray"
                    android:textSize="@dimen/ts_page_text"
                    android:spinnerMode="dropdown"
                    android:layout_toRightOf="@+id/tv_my_ciao_lable" />

                <com.ciao.app.views.customviews.CustomTextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/spnr_my_ciao_number"
                    android:layout_toStartOf="@+id/spnr_my_ciao_number"
                    android:paddingRight="@dimen/padding_page"
                    android:text="+1"
                    android:textSize="@dimen/ts_page_text"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_splash_login_sign_up_vertical_line"
            android:background="@color/color_vertical_line_dark_bottom_menu"
            android:visibility="visible" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/rl_my_international_prefix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_page_txt"
                android:paddingTop="@dimen/padding_page_txt"
                android:visibility="gone" >

                <com.ciao.app.views.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_international_prefix"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/ts_page_text" />

                <com.ciao.app.views.customviews.CustomTextView
                    android:id="@+id/tv_international_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="+1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/ts_page_text" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_splash_login_sign_up_vertical_line"
            android:background="@color/color_vertical_line_dark_bottom_menu"
            android:visibility="gone" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_page_txt"
                android:paddingTop="@dimen/padding_page_txt" >

                <com.ciao.app.views.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_notification"
                    android:textColor="@color/color_txt_gray"
                    android:textSize="@dimen/ts_page_text" />

                <Switch
                    android:id="@+id/switch_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_splash_login_sign_up_vertical_line"
            android:background="@color/color_vertical_line_dark_bottom_menu"
            android:visibility="visible" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_get_ciao_phone_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_page_txt"
                android:paddingTop="@dimen/padding_page_txt" >

                <com.ciao.app.views.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_get_ciao_number"
                    android:textColor="@color/color_txt_gray"
                    android:textSize="@dimen/ts_page_text" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_splash_login_sign_up_vertical_line"
            android:background="@color/color_vertical_line_dark_bottom_menu"
            android:visibility="visible" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_change_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_page_txt"
                android:paddingTop="@dimen/padding_page_txt" >

                <com.ciao.app.views.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_change_password"
                    android:textColor="@color/color_txt_gray"
                    android:textSize="@dimen/ts_page_text" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_splash_login_sign_up_vertical_line"
            android:background="@color/color_vertical_line_dark_bottom_menu"
            android:visibility="visible" >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/rl_check_rates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_page_txt"
                android:paddingTop="@dimen/padding_page_txt" >

                <com.ciao.app.views.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_check_rates"
                    android:textColor="@color/color_txt_gray"
                    android:textSize="@dimen/ts_page_text" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_splash_login_sign_up_vertical_line"
            android:background="@color/color_vertical_line_dark_bottom_menu"
            android:visibility="gone" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_tutorials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_page_txt"
                android:paddingTop="@dimen/padding_page_txt" >

                <com.ciao.app.views.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Tutorials"
                    android:textColor="@color/color_txt_gray"
                    android:textSize="@dimen/ts_page_text" />
                <!-- android:text="@string/txt_check_rates" -->
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_splash_login_sign_up_vertical_line"
            android:background="@color/color_vertical_line_dark_bottom_menu"
            android:visibility="visible" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_page_txt"
                android:paddingTop="@dimen/padding_page_txt" >

                <com.ciao.app.views.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_ad_lockscreen"
                    android:textColor="@color/color_txt_gray"
                    android:textSize="@dimen/ts_page_text" />

                <Switch
                    android:id="@+id/switch_lock_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="false" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_splash_login_sign_up_vertical_line"
            android:background="@color/color_vertical_line_dark_bottom_menu"
            android:visibility="visible" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_help"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_page_txt"
                android:paddingTop="@dimen/padding_page_txt" >

                <com.ciao.app.views.customviews.CustomTextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_help"
                    android:textColor="@color/color_txt_gray"
                    android:textSize="@dimen/ts_page_text" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_splash_login_sign_up_vertical_line"
            android:background="@color/color_vertical_line_dark_bottom_menu"
            android:visibility="visible" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_page_txt"
                android:paddingTop="@dimen/padding_page_txt" >

                <com.ciao.app.views.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_logout"
                    android:textColor="@color/color_txt_gray"
                    android:textSize="@dimen/ts_page_text" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>