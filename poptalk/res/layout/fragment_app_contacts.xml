<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_app_header"
        android:background="@color/color_call_top_bar_gb"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_poptalk"
            style="@style/CallOptions"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_top_menu_button" >

            <com.ciao.app.views.customviews.CustomTextView
                android:id="@+id/iv_poptalk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/txt_popTalk"
                android:textColor="@color/white" />

            <com.ciao.app.views.customviews.CustomTextView
                android:id="@+id/iv_poptalk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_poptalk"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/txt_popTalk_tab"
                android:textColor="@color/white"
                app:fontName="italic" />

            <View
                android:id="@+id/v_poptalk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_selected_tab"
                android:layout_alignParentBottom="true"
                android:background="@color/color_call_screen_selected_option" >
            </View>
        </RelativeLayout>

        <View
            android:layout_width="@dimen/width_splash_login_sign_up_vertical_line"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_splash_login_sign_up_vertical_line"
            android:layout_marginTop="@dimen/margin_splash_login_sign_up_vertical_line"
            android:background="@color/color_vertical_line_dark_top_menu" >
        </View>

        <View
            android:layout_width="@dimen/width_splash_login_sign_up_vertical_line"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_splash_login_sign_up_vertical_line"
            android:layout_marginTop="@dimen/margin_splash_login_sign_up_vertical_line"
            android:background="@color/color_vertical_line_light_top_menu" >
        </View>

        <RelativeLayout
            android:id="@+id/rl_contact"
            style="@style/CallOptions"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_top_menu_button" >

            <com.ciao.app.views.customviews.CustomTextView
                android:id="@+id/iv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/txt_poptalk_contacts"
                android:textColor="@color/white" />

            <com.ciao.app.views.customviews.CustomTextView
                android:id="@+id/iv_contact1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_contact"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/txt_poptalk_contacts_tab"
                android:textColor="@color/white"
                app:fontName="italic" />

            <View
                android:id="@+id/v_contact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_selected_tab"
                android:layout_alignParentBottom="true"
                android:background="@color/color_call_screen_selected_option"
                android:visibility="gone" >
            </View>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_contacts_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>